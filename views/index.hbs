    </div>
    

    <script>
        const newtx = document.getElementById("txt");
        const newau = document.getElementById("aut");
        const neq = document.getElementById("btn");
        const twt = document.getElementById("btn1");
       let realdata = "";
       let rnum = "";
        function getnew(){
            rnum = Math.floor(Math.random()*10);
            newtx.innerHTML = `${realdata[rnum].text}`;
            newau.innerHTML = `By  ${realdata[rnum].author}`;
         
        }
        function tweet(){
            tweetp = `http://twitter.com/intent/tweet?text=${realdata[rnum].text}`;
            window.open(tweetp);
        }
        const getqu = async() =>{
            const api = "https://type.fit/api/quotes";
    
            try{
                const data = await fetch(api);
                 realdata = await data.json();
                getnew(); 
            }
            catch(error){}
        }
        neq.addEventListener("click",getnew);
        twt.addEventListener("click",tweet);
        getqu();
    </script>
