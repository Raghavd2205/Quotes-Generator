<body>
    <div id = "back">
        <div id= "main">
            
                <button id="btn">New Quotes</button>
                
              
                <div id="avc">
                    <a href = "#" id=btn1>
                        <img src = "twt.png"style="width:80px;height:80px;">
                      </a>
                      
                </div> 
        </div>
        <div id = "txt"></div>
